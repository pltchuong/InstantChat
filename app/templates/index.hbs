<div>
  {{#view InstantChat.MessagesView viewName="messages"}}
    <div class="messages" style="height: 200px; overflow: auto;">
      <dl class="dl-horizontal">
        {{#each model}}
          <dt><small><span class="text-primary">{{sender}}</span></small></dt>
          <dd>{{messageHelper message}}</dd>
        {{/each}}
      </dl>
    </div>
  {{/view}}
  
  <br/>
  
  <form class="form-horizontal" role="form">
    <div class="form-group">
      <label for="sender" class="col-sm-2 control-label">Your name</label>
      <div class="col-sm-10">
        {{#view InstantChat.SenderView}}
          {{input type="text" id="sender" name="sender" class="form-control" value=sender}}
        {{/view}}
      </div>
    </div>
    <div class="form-group">
      <label for="message" class="col-sm-2 control-label">Your message</label>
      <div class="col-sm-10">
        {{#view InstantChat.MessageView}}
          {{textarea id="message" name="message" class="form-control" rows="3" value=message}}
        {{/view}}
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <div class="row">
          <div class="col-sm-6 text-left">
            {{#view InstantChat.SendButtonView}}
              <button {{action 'sendMessage'}} class="btn btn-primary">Send</button>
            {{/view}}
          </div>
          <div class="col-sm-6 text-right">
            <button {{action 'skypeEmo'}} class="btn btn-info">Skype</button>
            <button {{action 'yahooEmo'}} class="btn btn-info">Yahoo</button>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>